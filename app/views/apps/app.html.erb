<html manifest="<%= @app.bundle_id %>.manifest">
  <head>
    <!-- home display name -->
    <title><%= @app.name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <!-- status bar -->
    <meta name="apple-mobile-web-app-status-bar-style" content="<%= @app.status_bar_style %>" />
    <!-- home icon -->
    <link rel="apple-touch-icon-precomposed" href="<%= @app.bundle_id %>/assets/icon.png" />
    <!-- slash image, iPhone 4 Retina -->
    <!--link rel="apple-touch-startup-image" media="(device-width: 320px) and (-webkit-device-pixel-ratio: 2)" href="<%= @app.bundle_id %>/assets/splash-640x920.png" -->
    <!-- splash image, iPhone 5 Retina -->
    <link rel="apple-touch-startup-image" media="(device-width: 320px) and (device-height: 568px) and (-webkit-device-pixel-ratio: 2)" href="<%= @app.bundle_id %>/assets/splash-640x1096.png">
 
    <script type="text/javascript">var bundleId = "<%= @app.bundle_id %>";</script>
    <script type="text/javascript" src="app_assets/apps.js"></script>
  </head>
  <body style="margin:0">
    <div id="loading" style="display: none;"><div id="progress">100%</div></div>
    <div id="contents">
      <iframe name="contentsFrame" frameborder="0" width="100%" height="100%" marginwidth="0" marginheight="0"></iframe>
    </div>
  </body>
</html>
